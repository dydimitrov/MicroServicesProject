@model List<RealEstateWeb.Models.ViewModels.Bookmark.BookmarkViewModel>
<div class="bg-light-3 p-top-80 p-bottom-80">
    <div class="container">

        <!-- DATA -->
        <div class="bg-white m-bottom-40 box-shadow-1">
            <table class="table">
                <thead class="bg-dark text-white">
                    <tr class="valign-middle">
                        <th class="width-150 p-top-20 p-bottom-20" colspan="2">
                            <i class="fa fa-home"></i>
                            Имоти
                        </th>
                        <th class="p-top-20 p-bottom-20">
                            <i class="fa fa-magic"></i>
                            Действия
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                        {
                    <tr class="valign-middle">
                        <td class="width-50-lg">
                            <a asp-controller="Property" asp-action="Details" asp-route-id="@item.Id">
                                <img class="width-120" alt="Property" src="@item.Property.PictureUrl">
                            </a>
                        </td>
                        <td>
                            <h2 class="text-base text-bold-700 m-top-0">@item.Property.Price </h2>
                            <h5>
                                <a asp-controller="Property" asp-action="Details" asp-route-id="@item.Property.Id" class="text-bold-600 text-dark text-base-hover">@item.Property.Title</a>
                            </h5>
                            <p class="m-bottom-0">@item.Property.AddressStreet, @item.Property.AddressTown</p>
                        </td>
                        <td>
                            <div class="row">
                                <a asp-controller="Bookmark" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-sm btn-danger text-size-11 text-uppercase text-bold-700 p-top-5 p-bottom-5 p-left-10 p-right-10 rounded-0"><i class="fa fa-remove"></i> Премахни</a>
                            </div>
                            <form asp-controller="Appointment" asp-action="Create" asp-route-propertyId="@item.Property.Id" method="post">
                                <div class="row mt-2">
                                    <button class="btn btn-sm btn-success text-size-11 text-uppercase text-bold-700 p-top-5 p-bottom-5 p-left-10 p-right-10 rounded-0"><i class="fa fa-eye"></i> Оглед</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /DATA -->
    </div>
</div>

