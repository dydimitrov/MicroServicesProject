@using Microsoft.AspNetCore.Identity
<!-- NAVIGATION -->
<div role="navigation" data-menu="menu-wrapper" class="header-navbar navbar bg-base-dark navbar-fixed box-shadow-3">

    <!-- MENU CONTENT -->
    <div data-menu="menu-container" class="container navbar-container main-menu-content">

        <ul id="main-menu-navigation" data-menu="menu-navigation" class="nav navbar-nav">
            <li class="nav-item active">
                <a asp-controller="Home" asp-action="Index" class="nav-link"><i class="fa fa-home"></i> <span>Начало</span></a>
            </li>
            <li class="nav-item">
                <a asp-controller="Home" asp-action="About" class="nav-link"><i class="fa fa-info"></i> <span>За Нас</span></a>
            </li>
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Contact" class="nav-link"><i class="fa fa-phone"></i> <span>Контакти</span></a>
            </li>
            <li class="nav-item">
                <a asp-controller="Property" asp-action="All" class="nav-link"><i class="fa fa-home"></i> <span>Имоти</span></a>
            </li>

            @if (this.User.Identity.IsAuthenticated)
            {
                if (this.User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="All" class="nav-link"><i class="fa fa-home"></i> <span>Администрация на имоти</span></a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="AllContactRequests" class="nav-link"><i class="fa fa-info"></i> <span>Запитвания</span></a>
                    </li>

                }
                <li class="nav-item">
                    <a asp-controller="Bookmark" asp-action="MyBookmarks" class="nav-link"><i class="fa fa-cogs"></i> <span>Любими имоти</span></a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Property" asp-action="MyProperty" class="nav-link"><i class="fa fa-cogs"></i> <span>Моите имоти</span></a>
                </li>
            }
        </ul>
        @if (this.User.Identity.IsAuthenticated)
        {
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
                <ul id="main-menu-navigation" data-menu="menu-navigation" class="nav navbar-nav">
                    <li class="nav-item">
                        <button type="submit" class="btn btn-link navbar-btn navbar-link"><i class="fa fa-cogs" style="color: white"></i> <span style="color: white">Излез</span></button>
                    </li>
                </ul>
            </form>
        }
        else
        {
            <ul id="main-menu-navigation" data-menu="menu-navigation" class="nav navbar-nav navbar-right">
                <li class="nav-item">
                    <a asp-controller="Users" asp-action="Register" class="nav-link"><i class="fa fa-cogs"></i> <span>Регистрирай се</span></a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Users" asp-action="Login" class="nav-link"><i class="fa fa-cogs"></i> <span>Влез</span></a>
                </li>
            </ul>
        }
    </div>
    <!-- /MENU CONTENT -->
</div>
<!-- /NAVIGATION -->
