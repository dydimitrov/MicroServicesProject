<div class="bg-white p-top-80 p-bottom-80">
    <div class="container">

        <!-- AGENCY DETAIL -->
        <div class="row">

            <div class="col-lg-12 col-md-8 m-bottom-30">
                <h3 class="text-bold-700 text-center m-bottom-10">Контактна форма</h3>

                <div class="hr dark text-center m-bottom-20">
                    <hr class="border-3 border-double border-light border-left-0 border-top-0 border-right-0">
                    <div class="icons text-light">
                        <i class="fa fa-circle-o"></i>
                        <i class="fa fa-circle-o"></i>
                        <i class="fa fa-circle-o"></i>
                    </div>
                    <hr class="border-3 border-double border-light border-left-0 border-top-0 border-right-0">
                </div>

                <p></p>

                <div class="clearfix m-top-30">
                    <form method="post" asp-controller="Home" asp-action="Contact">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="Name" type="text" class="form-control form-control-lg rounded-0 bg-light-5 text-size-14" name="Name" placeholder="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="Email" type="email" class="form-control form-control-lg rounded-0 bg-light-5 text-size-14" name="Email" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="PhoneNumber" type="text" class="form-control form-control-lg rounded-0 bg-light-5 text-size-14" name="PhoneNumber" placeholder="Phone">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="City" type="text" class="form-control form-control-lg rounded-0 bg-light-5 text-size-14" name="City" placeholder="City">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input asp-for="Subject" type="text" class="form-control form-control-lg rounded-0 bg-light-5 text-size-14" name="Subject" placeholder="Subject">
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Message" class="form-control form-control-lg rounded-0 bg-light-5 text-size-14" rows="4" name="Message" placeholder="Message"></textarea>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" class="btn btn-base rounded-0 text-bold-600 text-spacing-5 text-uppercase text-size-13 p-top-12 p-bottom-12 p-left-25 p-right-25" value="Изпрати">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /AGENCY DETAIL -->
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}